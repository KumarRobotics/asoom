<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <node pkg="asoom" type="asoom_node" name="asoom" output="screen" ns="quadrotor">
    <!-- Settings for adjusting perf -->
    <param name="stereo_use_sgbm" value="False"/>
    <param name="pose_graph_num_frames_opt" value="30"/>
    <param name="map_thread_period_ms" value="5000"/>
    <param name="map_req_point_density" value="50"/>

    <param name="require_imgs" value="True"/>
    <param name="use_semantics" value="True"/>
    <param name="semantic_lut_path" value="$(find asoom)/config/semantic_lut.yaml"/>
    <param name="pose_graph_fix_scale" value="True"/>
    <param name="keyframe_dist_thresh_m" value="2"/>

    <param name="rectifier_calib_path" value="$(find asoom)/config/sim.yaml"/>
    <remap from="~pose" to="/unity_ros/quadrotor/TrueState/pose"/>
    <remap from="~img" to="RGBCamera_Down/image_raw"/>
    <remap from="~sem" to="SemanticCamera/image_raw"/>
    <remap from="~gps" to="/ublox/fix"/>
  </node>
</launch>

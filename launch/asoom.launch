<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <node pkg="image_transport" type="republish" name="republish" output="screen" args="compressed in:=/ovc/rgb/image_color out:=/asoom/img"/>

  <node pkg="asoom" type="asoom_node" name="asoom" output="screen">
    <param name="rectifier_calib_path" value="$(find asoom)/config/grace_quarters.yaml"/>
    <param name="require_imgs" value="True"/>
    <param name="pose_graph_fix_scale" value="False"/>

    <remap from="~pose" to="/dso/pose"/>
    <remap from="~gps" to="/ublox/fix"/>
  </node>

  <node pkg="image_publisher" type="image_publisher" name="map_image_publisher" args="$(find asoom)/maps/grace_quarters.png">
    <param name="frame_id" value="map_img"/>
    <param name="flip_horizontal" value="false"/>
    <param name="publish_rate" value="1"/>
  </node>

  <node pkg="tf2_ros" type="static_transform_publisher" name="link1_broadcaster" args="384110.00 4356585.69 -3 0 0 0 1 utm map_img" />
</launch>
